<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.dashboard.DashboardFragment"
        android:background="@android:color/black">

    <!-- Profile Placeholder for Firebase integration -->
    <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_placeholder"
            android:contentDescription="User Profile Picture"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Grid Layout for thumbnails (New to Old) -->
    <androidx.gridlayout.widget.GridLayout
            android:id="@+id/game_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="3"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Black Ops 6  -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">
            <ImageView
                    android:id="@+id/game1_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/black_ops_6"
                    android:scaleType="centerCrop"
                    android:contentDescription="Call of Duty: Black Ops 6"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty: Black Ops 6"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Warzone 2.0 -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">
            <ImageView
                    android:id="@+id/game2_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/cod_warzone_2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Call of Duty: Warzone 2.0"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty: Warzone 2.0"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Modern Warfare 3 -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">
            <ImageView
                    android:id="@+id/game3_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/cod_modern_warfare_3"
                    android:scaleType="centerCrop"
                    android:contentDescription="Call of Duty: Modern Warfare 3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty: Modern Warfare 3"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Modern Warfare 2 -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">
            <ImageView
                    android:id="@+id/game4_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/call_of_duty_modern_warfare_2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Call of Duty: Modern Warfare 2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty: Modern Warfare 2"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Black Ops CW -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">
            <ImageView
                    android:id="@+id/game5_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/black_ops_cold_war"
                    android:scaleType="centerCrop"
                    android:contentDescription="Call of Duty: Cold War"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty: Cold War"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Black Ops 4 -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">
            <ImageView
                    android:id="@+id/game6_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/black_ops_4"
                    android:scaleType="centerCrop"
                    android:contentDescription="Call of Duty: Black Ops 4"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty: Black Ops 4"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
