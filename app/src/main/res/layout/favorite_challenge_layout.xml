<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="12dp"
                                   app:cardBackgroundColor="#222222"
                                   android:layout_margin="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/black">

        <!-- Weapon Image -->
        <ImageView
                android:id="@+id/weaponImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/gun_placeholder"/>

        <!-- Title -->
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Splinter"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        <!-- Description -->
        <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 20 Headshot Kills"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        <!-- Favorite & Check Icons -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart_foreground"
                    android:tint="#FF0000"/>
        <!-- Progress Bar -->
        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="8dp"
                android:progress="50"
                android:max="100"
                android:layout_marginTop="8dp"
                android:progressTint="#FFD700"
                android:background="#555555"/>

            <ImageView
                    android:id="@+id/checkIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_mark_foreground"
                    android:tint="#FFFFFF"/>

        </LinearLayout>
        <!-- Completion Text -->
        <TextView
                android:id="@+id/progressText"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:text="10/20 Completed"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="4dp" android:textAlignment="center"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>