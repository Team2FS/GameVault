<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.camosync.CamoSync">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout">

    <Button
            android:id="@+id/SyncCamo"
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:text="Sync Camo Progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#BDBDBD"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />


    <Button
            android:id="@+id/ImportCamoProgress"
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:text="Import Camo Progress"
            app:layout_constraintTop_toBottomOf="@+id/SyncCamo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#BDBDBD"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/ExportCamoprogress"
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:text="Export Camo Progress"
            app:layout_constraintTop_toBottomOf="@+id/ImportCamoProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#BDBDBD"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/DeleteCamoProgress"
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:text="Reset Camo Progress"
            app:layout_constraintTop_toBottomOf="@+id/ExportCamoprogress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#BDBDBD"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>