<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.example.gamevault.GameVaultConfig"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:forceDarkAllowed="true"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/appicon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/appicon_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.GameVault"
            tools:targetApi="31">
        <activity
                android:name=".ui.settings.suggestfeature.SuggestFeatureActivity"
                android:exported="false"/>
        <activity
                android:name=".ui.settings.manageprofile.ManageProfileActivity"
                android:label=""
                android:exported="false"/>
        <activity
                android:name=".ui.login.loginActivity"
                android:exported="false"
                android:label=" "/>
        <activity
                android:name=".ui.settings.credits.Credits"
                android:exported="false"/>
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>